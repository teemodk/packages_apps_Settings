<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

        <!-- Floating mode switch -->
        <PreferenceCategory
            android:key="floating_mode"
            android:title="@string/floating_mode_title" >

            <SwitchPreference
                    android:key="heads_up_floating"
                    android:title="@string/heads_up_floating_window_title"
                    android:summary="@string/heads_up_floating_window_summary"
                    android:persistent="false"
                    android:defaultValue="true" />

            <com.android.settings.slim.SystemSettingSwitchPreference
                    android:key="slim_action_floats"
                    android:title="@string/slim_action_floats"
                    android:summary="@string/slim_action_floats_summary"
                    android:defaultValue="false" />
        </PreferenceCategory>

        <PreferenceCategory
            android:key="other_stuff"
            android:title="@string/other_stuff" >

        <!-- Power menu config -->
        <PreferenceScreen
            android:key="navbar_targets_settings"
            android:fragment="com.android.settings.slim.dslv.ActionListViewSettings"
            android:title="@string/power_menu_title">
                <extra android:name="actionMode" android:value="5" />
                <extra android:name="maxAllowedActions" android:value="6" />
                <extra android:name="disableLongpress" android:value="true" />
                <extra android:name="disableDeleteLastEntry" android:value="true" />
                <extra android:name="actionValues" android:value="shortcut_action_power_menu_values" />
                <extra android:name="actionEntries" android:value="shortcut_action_power_menu_entries" />
                <extra android:name="fragment" android:value="com.android.settings.slim.fragments.PowerMenuFragment" />
        </PreferenceScreen>

        <!-- ScreenRecorder -->
        <PreferenceScreen
            android:key="screen_recorder"
            android:title="@string/screen_recorder_title"
            android:fragment="com.android.settings.slim.ScreenRecorderSettings" >
        </PreferenceScreen>

        <com.android.settings.slim.SystemSettingSwitchPreference
            android:key="double_tap_sleep_anywhere"
            android:title="@string/double_tap_sleep_anywhere_title"
            android:summary="@string/double_tap_sleep_anywhere_summary" />
        </PreferenceCategory>

        <PreferenceCategory
            android:key="system_stuff"
            android:title="@string/system_stuff" >

        <!-- KernelAdiutor -->
        <PreferenceScreen
            android:key="key_kernel_adiutor"
            android:title="@string/kernel_adiutor_title"
            android:summary="@string/kernel_adiutor_summary">
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="com.grarak.kerneladiutor"
                android:targetClass="com.grarak.kerneladiutor.MainActivity" />
        </PreferenceScreen>

        <!-- SuperSU -->
        <PreferenceScreen
            android:key="supersu_settings"
            android:id="@+id/supersu_settings"
            android:title="@string/supersu_title">
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="eu.chainfire.supersu"
                android:targetClass="eu.chainfire.supersu.MainActivity" />
        </PreferenceScreen>
        </PreferenceCategory>

</PreferenceScreen>
